def create_game_screen_list():

    for i in range(0, 30):
        game_screen_list.append([])

    for i in range(0, 30):
        for z in range(0, 35):
            game_screen_list[i].append(' ')

        for x in range(0, 112):
            game_screen_list[i].append('X')

    for i in range(1, 29):
        for z in range(36, 146):
            game_screen_list[i][z] = ' '

    # print(game_screen_list)


