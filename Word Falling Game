def main_menu():

    runner1 = 1
    while runner1 == 1:

        print('1. Start game')
        print('2. Options')
        print('3. High score')
        print('4. Exit')
        print('')

        while runner1 == 1:

            if keyboard.is_pressed('1'):
                the_game()

            elif keyboard.is_pressed('2'):
                game_options()

            elif keyboard.is_pressed('3'):
                game_high_score()

            elif keyboard.is_pressed('4'):
                quit()


def the_game():

    while 1 == 1:
        word_faller()
        game_screen()


